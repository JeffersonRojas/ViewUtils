<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:ignore="HardcodedText" >

    <com.github.jeffersonrojas.viewutils.library.TextView
        android:text="Demo Vector Compound Drawable Support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        app:tintDrawableStart="@color/colorAccent"
        app:drawableStart="@drawable/ic_android_black_24dp"
        app:tintDrawableEnd="@color/colorPrimaryDark"
        app:drawableEnd="@drawable/ic_directions_run_black_24dp" />

    <com.github.jeffersonrojas.viewutils.library.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:drawablePadding="5dp"
        app:tintDrawableStart="@color/colorAccent"
        app:drawableStart="@drawable/ic_mail_black_24dp"
        android:layout_margin="10dp"/>

    <com.github.jeffersonrojas.viewutils.library.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        app:tintDrawableStart="@color/colorAccent"
        app:drawableStart="@drawable/ic_vpn_key_black_24dp"
        android:layout_margin="10dp"/>

    <com.github.jeffersonrojas.viewutils.library.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:drawablePadding="5dp"
        app:tintDrawableStart="@color/colorPrimary"
        app:drawableStart="@drawable/ic_flight_takeoff_black_24dp"
        android:layout_margin="10dp"/>

</LinearLayout>